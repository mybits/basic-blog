%h1 Editing post

= form_for :post, url: post_path(@post.id), method: :patch do |f|
	- if @post.errors.any?
		#errorExplanation
			%h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
			%ul
			- @post.errors.full_messages.each do |msg|
				%li= msg

	%p
		= f.label :title
		%br
		= f.text_field :title

	%p
		= f.label :text
		%br
		= f.text_area :text

	%p
		= f.submit

= link_to 'Back', posts_path